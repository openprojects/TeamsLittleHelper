<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item >        
        <shape>
            <gradient
               android:startColor="@color/NiceButtonStartColor"
               android:endColor="@color/NiceButtonEndColor"
               android:angle="270" />
            <stroke
               android:width="0dp"
               android:color="@color/NiceButtonBorderColor" />
            <corners
               android:radius="15dp" />
            <padding
               android:left="0dp"
               android:top="20dp"
               android:right="0dp"
               android:bottom="20dp" />
        </shape>
    </item>
    
    <item android:state_focused="true" >
        <shape>
            <gradient
               android:startColor="@color/NiceButtonPressedStartColor"
               android:endColor="@color/NiceButtonPressedEndColor"
               android:angle="270" />
            <stroke
               android:width="0dp"
               android:color="@color/NiceButtonBorderColor" />
            <corners
               android:radius="15dp" />
            <padding
               android:left="0dp"
               android:top="20dp"
               android:right="0dp"
               android:bottom="20dp" />
        </shape>
    </item>
    

    

</selector>